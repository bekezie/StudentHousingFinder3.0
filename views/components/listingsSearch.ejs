<h3>Search Listings</h3>

<form action="/search/Listing" method="POST">
  <div>
    <label class="form-label"
      >Title:
      <input class="form-control" name="title" type="text" />
    </label>
    <button type="submit" class="btn btn-primary">Search</button>
  </div>
</form>
<form action="/search/Listing" method="POST">
  <div>
    <label class="form-label"
      >Location:
      <input class="form-control" name="location" type="text" />
    </label>
    <button type="submit" class="btn btn-primary">Search</button>
  </div>
</form>
<form action="/search/Listing" method="POST">
  <div>
    <label for="unitType" class="form-label"
      >Unit type:
      <select class="form-select" id="unitType" name="unitType">
        <option value="dorm">Dorm</option>
        <option value="apartment">Apartment</option>
      </select>
    </label>
    <button type="submit" class="btn btn-primary">Search</button>
  </div>
</form>
<form action="/search/Listing" method="POST">
  <div>
    <label class="form-label"
      >Size (Sqft) (Less than or equal to):
      <input
        class="form-control"
        name="sizeInSqFt"
        type="number"
        placeholder="550"
      />
    </label>
    <button type="submit" class="btn btn-primary">Search</button>
  </div>
</form>
<form action="/search/Listing" method="POST">
  <div>
    <label class="form-label"
      >Rent (Per month) (Less than or equal to):
      <input
        class="form-control"
        name="rentPerMonth"
        type="number"
        placeholder="600"
      />
    </label>
    <button type="submit" class="btn btn-primary">Search</button>
  </div>
</form>
<form action="/search/Listing" method="POST">
  <div>
    <label class="form-label"
      >Description:
      <textarea
        class="form-control"
        id="description"
        name="description"
        rows="4"
        placeholder="Search by keywords or phrases."
      ></textarea>
    </label>
    <button type="submit" class="btn btn-primary">Search</button>
  </div>
</form>
<form action="/search/Listing" method="POST">
  <div>
    <label class="form-label"
      >Opening Date:
      <input cclass="form-control" 
        name="openingDate"
        type="date"
        placeholder="dd-mm-yyyy"
        min="1997-01-01"
        max="2030-12-31"
      />
    </label>
    <button type="submit" class="btn btn-primary">Search</button>
  </div>
</form>
<form action="/search/Listing" method="POST">
  <div>
    <label class="form-label"
      >Lease Term (Months):
      <input
        class="form-control"
        name="leaseInMonths"
        type="number"
        value="6"
      />
    </label>
    <button type="submit" class="btn btn-primary">Search</button>
  </div>
</form>
<%- include("./rankListings.ejs") %>
